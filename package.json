{
  "name": "video-player",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "description": "Video Player - play video and audio from your camera and microphone.",
  "main": "build/src/electron.js",
  "scripts": {
    "start": "webpack-dev-server --progress --colors",
    "release": "webpack --progress --colors -p",
    "app": "electron .",
    "build": "rm -rf dist && electron-builder build --mac"
  },
  "engines": {
    "node": ">=10.x"
  },
  "repository": "git@github.com:tylerlong/video-player.git",
  "author": {
    "name": "Tyler Long",
    "email": "tyler4long@gmail.com"
  },
  "dependencies": {
    "antd": "^4.4.0",
    "ramda": "^0.27.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-subx": "^0.8.2",
    "rxjs": "^6.6.0",
    "subx": "^0.9.14"
  },
  "devDependencies": {
    "@types/html-webpack-plugin": "^3.2.3",
    "@types/node": "12.12.48",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@types/webpack": "^4.41.18",
    "css-loader": "^3.6.0",
    "electron": "^9.1.0",
    "electron-builder": "^22.7.0",
    "eslint-plugin-react": "^7.20.3",
    "favicons-webpack-plugin": "^3.0.1",
    "gts": "^2.0.2",
    "html-webpack-plugin": "^4.3.0",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "yarn-upgrade-all": "^0.5.2"
  },
  "yarn-upgrade-all": {
    "ignore": [
      "@types/node"
    ]
  },
  "build": {
    "appId": "video-player.chuntaoliu.com",
    "productName": "Video Player",
    "files": [
      "build/src/electron.js",
      "docs/index.html",
      "docs/main.js",
      "docs/assets/**",
      "!node_modules${/*}"
    ],
    "mac": {
      "category": "public.app-category.video",
      "entitlements": "src/entitlements.mac.plist",
      "hardenedRuntime": true
    },
    "dmg": {
      "contents": [
        {
          "x": 128,
          "y": 160
        },
        {
          "x": 384,
          "y": 160,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "compression": "maximum"
  }
}
